<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/dimen_10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_40"
            android:layout_marginTop="@dimen/dimen_60"
            android:gravity="center"
            android:text="绑定失败，请先打开手机蓝牙"
            android:textColor="@color/color_grey_9b"
            android:textSize="@dimen/sp_15" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_25"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_cancel"
                    android:layout_width="@dimen/dimen_148"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_25"
                    android:background="@drawable/shape_grey_reg"
                    android:gravity="center"
                    android:layout_marginRight="@dimen/dimen_10"
                    android:text="取消"
                    android:textColor="@color/white_real"
                    android:textSize="@dimen/sp_18" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_ok"
                android:layout_width="@dimen/dimen_148"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/dimen_25"
                android:background="@drawable/shape_gradient_blue_horizatol"
                android:gravity="center"
                android:text="打开蓝牙"
                android:textColor="@color/white_real"
                android:textSize="@dimen/sp_18" />
                </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>